{
    "apiVersion": "1.0-dev",
    "swaggerVersion": "1.2",
    "basePath": "http://0.0.0.0:8080/api/v1",
    "resourcePath": "/user.json",
    "apis": [
        {
            "path": "/user.json",
            "description": "Info on the current user login state.",
            "operations": [
                {
                    "method": "GET",
                    "nickname": "isLoggedIn",
                    "type": "simple-type",
                    "parameters": [],
                    "summary": "Return the the user name, when the user is logged in.",
                    "notes": "Return the user name if the user is logged in or an error if the user could not be authenticated. It will also the login and log out url",
                    "errorResponses": [
                        {
                            "code": 401,
                            "message": "Unauthorized"
                        }
                    ]
                }
            ]
        }
    ]
}